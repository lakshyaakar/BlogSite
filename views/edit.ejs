<% include ./partials/header.ejs %>


<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title %></div>
		<form class="ui form" action="/blogs/<%= blog.id %>?_method=PUT" method="POST"> 	
		  <div class="field">
		    <label>Title</label>
		    <input type="text" name="title" value="<%= blog.title %>" required> 
		  </div>
		  <div class="field">
		    <label>Image URL</label>
		    <input type="text" name="image" placeholder="Enter Image URL" value="<%= blog.image %>" required>
		  </div>
		  <div class="field">
	    	<label>Post Content</label>
	    	<textarea name="content" placeholder="Content of Blog"><%= blog.description %></textarea>
	  	  </div>
	  	  <button class="ui violet basic button">Edit Post</button>
  	  </form>
	</div>
</div>

<% include ./partials/footer.ejs %>